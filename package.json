{
  "name": "@aleksei-uzin/custom-components-lib",
  "version": "1.11.0",
  "description": "A lightweight and customizable React component library built with TypeScript and Storybook",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js",
      "require": "./build/index.js"
    }
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "webpack",
    "release": "npm run build && npm publish",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "format:check": "prettier --check src/**/*.{ts,tsx,css}",
    "format:write": "prettier --write src/**/*.{ts,tsx,css}",
    "lint": "eslint src/**/*.{ts,tsx}",
    "prepare": "husky",
    "chromatic": "dotenv -- npx chromatic"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aleksei-Uzin/custom-components-lib.git"
  },
  "keywords": [
    "react",
    "react-components",
    "ui-library",
    "typescript",
    "storybook"
  ],
  "author": "Aleksei Uzin <aleksei.uzin@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Aleksei-Uzin/custom-components-lib/issues"
  },
  "homepage": "https://github.com/Aleksei-Uzin/custom-components-lib#readme",
  "devDependencies": {
    "@eslint/js": "9.37.0",
    "@storybook/addon-docs": "9.1.10",
    "@storybook/addon-webpack5-compiler-swc": "4.0.1",
    "@storybook/react-webpack5": "9.1.10",
    "chromatic": "13.3.0",
    "css-loader": "7.1.2",
    "css-minimizer-webpack-plugin": "7.0.2",
    "dotenv-cli": "10.0.0",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-react": "7.37.5",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.3",
    "prettier": "3.6.2",
    "storybook": "9.1.10",
    "style-loader": "4.0.0",
    "ts-loader": "9.5.4",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.0",
    "webpack": "5.102.1",
    "webpack-cli": "6.0.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@types/react": "19.2.2",
    "classnames": "2.5.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{ts,tsx}": "eslint --cache --fix"
  }
}
